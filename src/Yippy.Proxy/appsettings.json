{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Extensions": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "Yarp.ReverseProxy.Forwarder.HttpForwarder": "Warning"
      }
    },
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "Console",
            "Args": {
              "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}] [{SourceContext}] [{MachineName}/{ThreadId}] [{Level}] {Message:lj}{NewLine}{Exception}"
            }
          },
          {
            "Name": "File",
            "Args": {
              "path": "Logs/Proxy_.log",
              "rollingInterval": "Day",
              "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss}] [{SourceContext}] [{MachineName}/{ThreadId}] [{Level}] {Message:lj}{NewLine}{Exception}",
              "shared": true
            }
          }
        ]
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity" : {
        "ClusterId": "identity-cluster",
        "RateLimiterPolicy": "AuthPolicy",
        "Match": {
          "Path": "/auth/{**remainder}"
        }
      },
      "news": {
        "ClusterId": "news-cluster",
        "Match": {
          "Path": "/posts/{**remainder}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:8001"
          }
        }
      },
      "news-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:8003"
          }
        }
      }
    }
  }
}
